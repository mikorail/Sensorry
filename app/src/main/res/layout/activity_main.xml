<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    tools:context=".MainActivity">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/title"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sensor Monitor!"
            android:layout_gravity="center"
            />
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TableRow>
                <TextView
                    android:layout_gravity="left"
                    android:layout_marginTop="20dp"
                    android:id="@+id/sensor_prox"
                    android:textColor="#000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hello World!"
                    />

                <TextView
                    android:id="@+id/sensor_acc"
                    android:layout_marginLeft="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:text="Hello World!"
                    android:textColor="#000" />
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_gravity="left"
                    android:id="@+id/sensor_temp"
                    android:textColor="#000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hello World!"
                    />
                <TextView
                    android:layout_marginLeft="20dp"

                    android:layout_marginTop="20dp"
                    android:layout_gravity="right"
                    android:id="@+id/sensor_hum"
                    android:textColor="#000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hello World!"
                    />
            </TableRow>
            <TableRow>
                <TextView

                android:layout_marginTop="20dp"
                android:id="@+id/sensor_gyro"
                android:textColor="#000"
                android:layout_gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hello World!"
                />
                <TextView
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:id="@+id/sensor_gravity"
                    android:layout_gravity="right"
                    android:textColor="#000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hello World!"
                    />
            </TableRow>
            <TableRow>
                <TextView

                    android:id="@+id/sensor_press"
                    android:textColor="#000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hello World!"
                    />
                <TextView
                    android:layout_marginLeft="30dp"

                    android:id="@+id/sensor_orient"
                    android:textColor="#000"
                    android:layout_gravity="right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hello World!"
                    />

            </TableRow>
        </TableLayout>
    </LinearLayout>

</ScrollView>


</android.support.constraint.ConstraintLayout>